<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Datenanzeige mit Datei-Upload</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #333;
            color: #fff;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background: #424242;
            border-radius: 8px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            text-align: left;
            padding: 8px;
            border-bottom: 1px solid #ddd;
            color: #fff;
        }
        th {
            background-color: #555;
        }
        tr:nth-child(even) {background-color: #393939;}
    </style>
</head>
<body>
<div class="container">
    <h2>Datenanzeige</h2>
    <table id="dataTable">
        <thead>
            <tr>
                <th>Artikelnummer</th>
                <th>Bezeichnung</th>
                <th>Lagerstand</th>
                <th>Einheit</th>
                <th>D-Preis</th>
                <th>VPE</th>
            </tr>
        </thead>
        <tbody>
            <!-- Datenzeilen werden hier eingefügt -->
        </tbody>
    </table>
</div>
<script>
const proxyUrl = 'https://cors-anywhere.herokuapp.com/';
const dataUrl = 'https://drive.google.com/uc?export=view&id=1HD0EDGEr7XoJTV6CfxN9xWjTrVbQ4rwe'; // Ihre Google Drive File ID

function loadData(url) {
    fetch(proxyUrl + url)
        .then(response => response.text())
        .then(csv => {
            var rows = csv.split('\n').map(row => row.split(','));
            updateTable(rows);
        }).catch(error => {
            console.error('Fehler beim Laden der Daten:', error);
        });
}

function updateTable(rows) {
    var tbody = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
    tbody.innerHTML = '';
    rows.forEach(function(row, index) {
        if (index === 0) return; // Kopfzeile überspringen
        var tr = document.createElement('tr');
        row.forEach(function(cell, cellIndex) {
            var td = document.createElement('td');
            td.textContent = cell;
            tr.appendChild(td);
        });
        tbody.appendChild(tr);
    });
}

document.addEventListener('DOMContentLoaded', function() {
    loadData(dataUrl);
});
</script>
</body>
</html>
